<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".channel.ChannelHomeFragment">

    <LinearLayout
        android:id="@+id/channelHomeLive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/channelHomeLiveThumbnail"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:scaleType="fitStart"
                android:src="@drawable/stream_thumbnail" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/roundrectangle"
                android:backgroundTint="#ff0038"
                android:paddingHorizontal="3dp"
                android:paddingVertical="2dp"
                android:text="생방송"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/channelHomeLiveViewer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/channelHomeLiveThumbnail"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/roundrectangle"
                android:backgroundTint="#77000000"
                android:paddingHorizontal="3dp"
                android:paddingVertical="2dp"
                android:text="시청자 907명"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="생방송"
                android:textColor="@color/main"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/channelHomeLiveTitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="즐거운 수요일"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/channelHomeLiveCategory"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Just Chatting"
                android:textColor="#dddddd"
                android:textSize="16dp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/channelHomeNull"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사용 가능한 콘텐츠 없음"
            android:textColor="#cccccc"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="현재 사용 가능한 콘텐츠가 없습니다."
            android:textColor="#dddddd"
            android:textStyle="bold"
            android:textSize="11dp"/>
    </LinearLayout>
</LinearLayout>
