<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="5dp">

    <ImageView
        android:id="@+id/menu4ResultChannelImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginVertical="10dp"
        android:src="@drawable/profile_img9"/>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/menu4ResultChannelNicknameId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="김나성 (naseongkim)"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/menu4ResultChannelFollower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="팔로워 1.69만명"/>

        <LinearLayout
            android:id="@+id/menu4ResultChannelBtnFollow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/roundrectangle"
            android:backgroundTint="@color/main"
            android:padding="5dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_menu1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="팔로우"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>