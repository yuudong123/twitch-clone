<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical"
    tools:context=".channel.ChannelChatFragment">

    <TextView
        android:id="@+id/activityChannelChatMsg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/roundrectangle"
        android:backgroundTint="#888888"
        android:gravity="center_vertical"
        android:paddingRight="5dp">

        <EditText
            android:id="@+id/activityChannelChatEdtMsg"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="메시지 보내기"
            android:padding="8dp"
            android:textColorHint="#eeeeee"
            android:inputType="text"
            android:imeOptions="actionSend"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/imoji_icon" />
    </LinearLayout>

</LinearLayout>