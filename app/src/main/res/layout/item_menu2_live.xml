<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/menu2LiveThnail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/stream_thumbnail" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/roundrectangle"
            android:backgroundTint="#ff0038"
            android:paddingHorizontal="3dp"
            android:paddingVertical="2dp"
            android:text="생방송"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/menu2LiveViewer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/menu2LiveThnail"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/roundrectangle"
            android:backgroundTint="#77000000"
            android:paddingHorizontal="3dp"
            android:paddingVertical="2dp"
            android:text="시청자 907명"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/menu2LiveProfile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/profile_img1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/menu2LiveStreamer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이초홍"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/menu2LiveTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="1dp"
                android:text="구리는 오늘 올라갔을까요?"
                android:textColor="#cccccc"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/menu2LiveCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="마인크래프트"
                android:textColor="#aaaaaa"
                android:textStyle="bold" />

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tagbox"
                android:paddingHorizontal="8dp"
                android:text="한국어"
                android:textAlignment="center" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/menu2BtnOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/bg"
            android:src="@drawable/main2_button_option" />

    </LinearLayout>
</LinearLayout>