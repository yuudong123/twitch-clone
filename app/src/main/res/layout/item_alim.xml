<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/alimItemBlock">

    <ImageView
        android:id="@+id/alimItemImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:src="@drawable/alim_hearthstone" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/alimItemContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이제 Hearthstone의 Festival of Legends Card을(를) 받을 수 있습니다.. 전리품을 받으려면 2023년 4월 7일 PM 3시 54분 0초 UTC까지 인벤토리 페이지에서 드롭을 받으세요!" />

        <TextView
            android:id="@+id/alimItemDate"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4월 6일"
            android:textSize="12dp"/>
    </LinearLayout>

</LinearLayout>