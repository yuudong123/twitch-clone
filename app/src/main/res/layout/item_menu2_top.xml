<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/menu2TopThnail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/stream_thumbnail" />

    <TextView
        android:paddingHorizontal="3dp"
        android:paddingVertical="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/roundrectangle"
        android:backgroundTint="#ff0038"
        android:text="생방송"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/menu2TopViewer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/menu2TopThnail"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/roundrectangle"
        android:backgroundTint="#77000000"
        android:paddingHorizontal="3dp"
        android:paddingVertical="2dp"
        android:text="시청자 907명"
        android:textStyle="bold" />
</RelativeLayout>